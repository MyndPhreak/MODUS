<?xml version="1.0"?>
<Container version="2">
  <Name>modus-web</Name>
  <Repository>ghcr.io/mynd/modus-web:latest</Repository>
  <Registry>https://ghcr.io/</Registry>
  <Network>br0</Network>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project>https://github.com/mynd/modular-discord-bot</Project>
  <Overview>MODUS Web Dashboard â€” Nuxt-powered control panel for your MODUS Discord bot. Manage modules, settings, and server configurations.</Overview>
  <Category>Tools: Other:</Category>
  <WebUI>http://[IP]:[PORT:3000]</WebUI>
  <TemplateURL/>
  <Icon>https://cdn.discordapp.com/embed/avatars/0.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <DateInstalled/>
  <Description>MODUS Web Dashboard container. Requires Appwrite and Discord credentials.</Description>
  <Changes/>

  <!-- Server-side (private) -->
  <Config Name="Appwrite API Key" Target="NUXT_APPWRITE_API_KEY" Default="" Mode="" Description="Appwrite server-side API key" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="Discord Bot Token" Target="NUXT_DISCORD_BOT_TOKEN" Default="" Mode="" Description="Discord bot token (for server-side Discord API calls)" Type="Variable" Display="always" Required="true" Mask="true"/>

  <!-- Public (client-side) -->
  <Config Name="Appwrite Endpoint" Target="NUXT_PUBLIC_APPWRITE_ENDPOINT" Default="https://api.ppo.gg/v1" Mode="" Description="Appwrite API endpoint URL" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Appwrite Project ID" Target="NUXT_PUBLIC_APPWRITE_PROJECT_ID" Default="69266f6e00118a9f6b58" Mode="" Description="Appwrite project ID" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Dashboard Base URL" Target="NUXT_PUBLIC_BASE_URL" Default="https://bot.ppo.gg" Mode="" Description="Public URL of the web dashboard" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Bot Admin Discord IDs" Target="NUXT_PUBLIC_BOT_ADMIN_IDS" Default="" Mode="" Description="Comma-separated Discord user IDs with admin access" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Bot API URL" Target="NUXT_PUBLIC_BOT_URL" Default="http://modus-bot:3005" Mode="" Description="Internal URL to reach the bot container (use container name if on same Docker network)" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Discord Client ID" Target="NUXT_PUBLIC_DISCORD_CLIENT_ID" Default="" Mode="" Description="Discord application client ID" Type="Variable" Display="always" Required="true" Mask="false"/>

  <!-- Port Mapping -->
  <Config Name="Web UI Port" Target="3000" Default="3000" Mode="tcp" Description="Web dashboard port" Type="Port" Display="always" Required="true" Mask="false"/>
</Container>
