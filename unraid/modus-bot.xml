<?xml version="1.0"?>
<Container version="2">
  <Name>modus-bot</Name>
  <Repository>ghcr.io/mynd/modus-bot:latest</Repository>
  <Registry>https://ghcr.io/</Registry>
  <Network>br0</Network>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project>https://github.com/mynd/modular-discord-bot</Project>
  <Overview>MODUS Discord Bot â€” Modular Operational Discord Utility System. Provides music playback, welcome messages, custom embeds, and more.</Overview>
  <Category>Tools: Other:</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon>https://cdn.discordapp.com/embed/avatars/0.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <DateInstalled/>
  <Description>MODUS Discord Bot container. Requires DISCORD_TOKEN and Appwrite credentials.</Description>
  <Changes/>

  <!-- Required Environment Variables -->
  <Config Name="Discord Token" Target="DISCORD_TOKEN" Default="" Mode="" Description="Your Discord bot token from the Developer Portal" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="Discord Client ID" Target="CLIENT_ID" Default="" Mode="" Description="Discord application/client ID" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Appwrite Endpoint" Target="APPWRITE_ENDPOINT" Default="https://api.ppo.gg/v1" Mode="" Description="Appwrite API endpoint URL" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Appwrite Project ID" Target="APPWRITE_PROJECT_ID" Default="69266f6e00118a9f6b58" Mode="" Description="Appwrite project ID" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Appwrite API Key" Target="APPWRITE_API_KEY" Default="" Mode="" Description="Appwrite server-side API key" Type="Variable" Display="always" Required="true" Mask="true"/>

  <!-- Optional -->
  <Config Name="Bot Health Port" Target="BOT_PORT" Default="3005" Mode="" Description="Internal health check port" Type="Variable" Display="advanced" Required="false" Mask="false"/>

  <!-- Port Mapping -->
  <Config Name="Health Check Port" Target="3005" Default="3005" Mode="tcp" Description="Bot health check port" Type="Port" Display="advanced" Required="false" Mask="false"/>
</Container>
